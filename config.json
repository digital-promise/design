{
    "source": [
        "./tokens/**/*.json"
    ],
    "platforms": {
        "ts": {
            "transformGroup": "js",
            "transform": [
                "size/rem"
            ],
            "buildPath": "./dist/",
            "files": [
                {
                    "destination": "tokens.js",
                    "format": "javascript/module"
                },
                {
                    "format": "typescript/module-declarations",
                    "destination": "tokens.d.ts"
                }
            ]
        },
        "css": {
            "transformGroup": "css",
            "transform": [
                "size/rem"
            ],
            "files": [
                {
                    "format": "css/variables",
                    "destination": "src/theme.css",
                    "options": {
                        "selector": "@theme"
                    }
                }
            ]
        }
    }
}